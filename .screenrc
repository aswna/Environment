# See http://www.gnu.org/software/screen/manual/screen.html#Redisplay
# Set all windows to partial refresh.
allpartial off

# See http://www.gnu.org/software/screen/manual/screen.html#Redisplay
# If set to on, "alternate screen" support is enabled in virtual terminals, just like in xterm.
altscreen on

# See http://www.gnu.org/software/screen/manual/screen.html#Detach
# Automatically detach the session on SIGHUP.
autodetach on

# See http://www.gnu.org/software/screen/manual/screen.html#Bindkey
# Alt-j changes to previous window
bindkey ^[j prev

# Alt-k changes to next window
bindkey ^[k next

# See http://www.gnu.org/software/screen/manual/screen.html#Scrollback
# Turn compacting "on" to hold more useful lines in your scrollback buffer.
compacthist on

# See http://www.gnu.org/software/screen/manual/screen.html#Flow-Control
defflow auto

# See http://www.gnu.org/software/screen/manual/screen.html#Scrollback
# Set default lines of scrollback.
defscrollback 100000

# See http://www.gnu.org/software/screen/manual/screen.html#Hardware-Status-Line
# Use the hardware status line.
hardstatus alwayslastline

# See http://www.gnu.org/software/screen/manual/screen.html#String-Escapes
# [hostname in green][server load in blue][window list with active window title is highlighted in red][date and time in green]
hardstatus string '%{= g}[%H]%{B}[%l]%{g}[%=%{= w}%-w%{r}%n %t%{w}%+w%=%{g}][%Y-%m-%d %c]'

# See http://www.gnu.org/software/screen/manual/screen.html#Screen-Saver
idle 600

# See http://www.gnu.org/software/screen/manual/screen.html#Searching
# Tell screen to ignore the case of characters in searches.
ignorecase on

# See http://www.gnu.org/software/screen/manual/screen.html#Bindkey-Control
# Set inter-character timeout used for keymapping to 0 (f.i.: Esc should not behave like Alt).
maptimeout 0

# See http://www.gnu.org/software/screen/manual/screen.html#Shell
# Set the default program for new windows.
# If the command begins with a '-' character, the shell will be started as a login-shell.
shell -$SHELL

# See http://www.gnu.org/software/screen/manual/screen.html#Startup-Message
# Turn off startup message about copyright.
startup_message off

# See http://www.gnu.org/software/screen/manual/screen.html#Bell
# Turn off visual bell.
vbell off

# Private settings (bindings, environment variable settings, f.i. DISPLAY, etc)
source $HOME/.screenrc.private
